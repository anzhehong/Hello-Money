                       FontSize="20"
                       FontWeight="Bold"
                       Style="{ThemeResource PageTitleTextBlockStyle}" 
                       Opacity="0.6" VerticalAlignment="Center"
                       Margin="3,3,3,3"/>
            </StackPanel>

            <!--make some buttons-->
            <Grid x:Name="ButtonGrid"
                  Margin="3,3,3,3"
                  Grid.Row="1"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
