<?xml version="1.0" encoding="utf-8" ?> 
<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.2">
  <CommandSet xml:lang="en-us" Name="HelloMoneyCommandSet_en-us">
    <AppName>MyMoney</AppName>
    <Example>Open Hello-Money</Example>

    <Command Name="showWallet">
      <Example>MyMoney wallet</Example>
      <ListenFor RequireAppName="ExplicitlySpecified">{builtin:AppName} wallet</ListenFor>
      <Feedback>Showing your wallet</Feedback>
      <Navigate/>
    </Command>
    
    <Command Name="addRecord">
      <Example>MyMoney new record</Example>
      <ListenFor RequireAppName="ExplicitlySpecified">{builtin:AppName} new record</ListenFor>
      <Feedback>Turning to record page</Feedback>
      <Navigate/>
    </Command>

    <Command Name="showBill">
      <Example>MyMoney bill</Example>
      <ListenFor RequireAppName="ExplicitlySpecified">{builtin:AppName} bill</ListenFor>
      <Feedback>Showing your bill</Feedback>
      <Navigate/>
    </Command>
  </CommandSet>

  <CommandSet xml:lang="zh-cn" Name="HelloMoneyCommandSet_zh-cn">
    <AppName>账本</AppName>
    <Example>打开账本页面</Example>

    <Command Name="showWallet">
      <Example>打开账本钱包</Example>
      <ListenFor RequireAppName="ExplicitlySpecified">打开 {builtin:AppName} 钱包</ListenFor>
      <Feedback>正在打开钱包</Feedback>
      <Navigate/>
    </Command>

    <Command Name="addRecord">
      <Example>打开账本记账</Example>
      <ListenFor RequireAppName="ExplicitlySpecified">打开 {builtin:AppName} 记账</ListenFor>
      <Feedback>正在打开记账</Feedback>
      <Navigate/>
    </Command>

    <Command Name="showBill">
      <Example>打开账本账单</Example>
      <ListenFor RequireAppName="ExplicitlySpecified">打开 {builtin:AppName} 账单</ListenFor>
      <Feedback>正在打开账单</Feedback>
      <Navigate/>
    </Command>
  </CommandSet>
 </VoiceCommands>
